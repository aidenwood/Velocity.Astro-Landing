---
import Container from "@components/container.astro";
import ContainerFW from "@components/container-fullwidth.astro";
import Hero from "@components/hero.astro";
import HeroSecondary from "@components/hero-secondary.astro";
import Cta from "@components/cta.astro";
import Grid from "@components/grid-2x2.astro";
import SectionHeadImg from "@components/sectionhead-img.astro";
import SectionHeadSecImg from "@components/sectionhead-img-reverse.astro";
import BlogSlider from "@components/slider-content.astro";
import GallerySlider from "@components/slider-services.astro";
import Logos from "@components/logos.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="">
  <ContainerFW>
    <Hero />
    <HeroSecondary />
  </ContainerFW>

  <Container>
    <Grid />

    <SectionHeadSecImg>
      <Fragment slot="title">
        Brand strategy development.
      </Fragment>
      <Fragment slot="desc">
        Aidxn Design excels at crafting compelling brand strategies that resonate with your target audience. 
        Through in-depth research and analysis, we help you define your brand identity, messaging, and positioning, 
        setting the stage for success in the digital landscape. Our strategic approach ensures that every aspect of 
        your brand communicates a consistent and captivating story, building strong connections and driving business growth..
      </Fragment>
      <Fragment slot="cover">
        <Picture
                  src={PagecoverSecondary}
                  sizes="(max-width: 2000px) 2000px, 1000px"
                  widths={[1000, 1500, 2000]}
                  aspectRatio="3:2"
                  background="#f2f2f2"
                  fit="cover"
                  position="center"
                  class="w-full rounded"
                />
      </Fragment>
    </SectionHeadSecImg>

    <Cta />
  </Container>

  <ContainerFW>
    <GallerySlider />
    <BlogSlider />
    <Logos /> 
  </ContainerFW>
</Layout>
