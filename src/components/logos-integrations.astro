---
// @ts-ignore
import { Icon } from "astro-icon";
---

<div class="mt-24 pb-24">
  <h2 class="text-center text-slate-500">High-Performance Integrations</h2>
  <div class="flex gap-8 md:gap-20 items-center justify-center mt-10 flex-wrap">
    <div id="iconContainer" class="flex flex-col items-center justify-center">  
      <Icon class="h-8 md:h-12" name="simple-icons:zapier" />
      <h3 class="font-semibold text-lg">Zapier</h3>
    </div>
    <div id="iconContainer" class="flex flex-col items-center justify-center">  
      <Icon class="h-8 md:h-12" name="simple-icons:googleads" />
      <h3 class="font-semibold text-lg">Google Ads</h3>
    </div>
    <div id="iconContainer" class="flex flex-col items-center justify-center">  
      <Icon class="h-8 md:h-12" name="simple-icons:googletagmanager" />
      <h3 class="font-semibold text-lg">Google Tag Manager</h3>
    </div>
    <div id="iconContainer" class="flex flex-col items-center justify-center">  
      <Icon class="h-8 md:h-12" name="simple-icons:netlify" />
      <h3 class="font-semibold text-lg">Netlify</h3>
    </div>
    <div id="iconContainer" class="flex flex-col items-center justify-center">  
      <Icon class="h-8 md:h-12" name="simple-icons:cloudflare" />
      <h3 class="font-semibold text-lg">Cloudflare DNS</h3>
    </div>
    <div id="iconContainer" class="flex flex-col items-center justify-center">  
      <Icon class="h-8 md:h-12" name="simple-icons:git" />
      <h3 class="font-semibold text-lg">Git CL/CI</h3>
      <p class="text-slate-700 text-sm md:text-xs italic">3D Renders, Three.JS integration, Web3 Experiences.</p>
    </div>
  </div>
</div>
