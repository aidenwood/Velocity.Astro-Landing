                class="absolute right-0 z-10 object-cover object-center w-48 h-64 -mt-8 -mr-8 transition duration-300 transform rounded-md shadow-2xl md:w-40 lg:w-40 lg:top-0 lg:-mt-16 md:-mr-16 lg:-mr-6 md:rounded-lg lg:rounded-xl group-hover:scale-105"
              />
        </div>
        <div id="ImgContainer" class="relative w-full h-full overflow-hidden transition duration-300 transform shadow-lg rounded-xl group-hover:scale-95">
          <Picture
                src={Dash}
                sizes="(max-width: 800px) 100vw, 800px"
                widths={[400, 800]}
                loading="eager"
                aspectRatio="5:3"
                background="#f2f2f200"
                fit="contain"
                position="center"
