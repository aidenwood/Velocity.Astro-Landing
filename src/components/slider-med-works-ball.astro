import { Icon } from "astro-icon";
import Link from "@components/ui/link.astro";
import { Picture } from "@astrojs/image/components";
import VelocityEcomm from '../assets/products-sqr/velocity-ecommerce.webp';
import VelocityLrg from '../assets/products-sqr/web-design-render.webp';
import VelocitySml from '../assets/products-sqr/velocity-web-design.webp';
import BrandPack from '../assets/products-sqr/brand-refresh.webp';
import CPCmarketing from '../assets/products-sqr/google-search-ad-management.webp';
import MetaAds from '../assets/products-sqr/fb-marketing-design.webp';
import MetaAdManagement from '../assets/products-sqr/fb-marketing-management.webp';
import AnimatedAds from '../assets/products-sqr/animated-ad-design.webp';
import DisplayMarketing from '../assets/products-sqr/google-display-ad-management.webp';
import PrintAds from '../assets/products-sqr/billboard-ad-design.webp';
import BusAds from '../assets/products-sqr/bus-ad-management.webp';
import CompleteBrandPack from '../assets/products-sqr/complete-brand-packages.webp';
import BillboardAds from '../assets/products-sqr/sml-billboard-design.webp';


const services = [
  {
    imgsrc: CompleteBrandPack,
    imgalt: "Advertising with Google for free through organic SEO improvements.",
  },
  {
    imgsrc: BrandPack,
    imgalt: "Advertising with Google for free through organic SEO improvements.",
  },
  {
    imgsrc: VelocityLrg,
    imgalt: "Advertising with Google for free through organic SEO improvements.",
  },
  {
    imgsrc: AnimatedAds,
    imgalt: "Advertising with Google for free through organic SEO improvements.",
  },
  {
    imgsrc: BusAds,
    imgalt: "Advertising with Google for free through organic SEO improvements.",
  },
  {
    imgsrc: PrintAds,
    imgalt: "Advertising with Google for free through organic SEO improvements.",
  },
];
---

<!-- Flickity -->
<!-- CSS -->
<link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>

<!-- Flickity Custom Styles -->
<style>

  .carousel-cell {
    margin-right: 20px;
    margin-bottom: 30px;
    padding: 20px 40px;
  }

  /* Start Flickity viewport safeguards V3 */
  main { max-width: 100%; }
  .flickity-viewport { min-height: fit-content ; }
  .ball-carousel, .flickity-viewport { max-width: 100vw !important; margin: 0 auto; min-height: 500px; }
  /* End Flickity viewport safeguards V3 */
  .ball-carousel { margin: 20px auto; }


  /* Glass-card effect dial in, minimal */
  #glass-card {
    border-radius: 30px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(30px);
    border: 2px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    transition-duration: 200ms;
  }
  #glass-card:hover {
    box-shadow: 0 15px 20px #00000010, 0 15px 20px #00000010;
  }

  #works-row { border: black; border-top: ridge; }

  </style>

<main id="works-row" class="my-8 md:my-16">
<div class="pt-4 mb-8">
  <h3 class="text-2xl md:text-3xl lg:text-5xl font-bold lg:tracking-tight">
    Ball Realty
  </h3>
  <p class="text-sm lg:text-lg max-w-6xl mt-4 text-slate-600">
    Complete brand refresh + web design.
  </p>
</div>

<div id="sliderContainer" class="ball-carousel h-fit pb-8">
  {
    services.map((item) => (
      <div class="carousel-cell flex flex-col md:flex-row justify-center md:items-center h-fit w-full lg:w-3/4 xl:w-2/5">
        <Picture
              id="glass-card"
              src={item.imgsrc}
              sizes="(max-width: 1200px) 1200px, 900px, 600px"
              widths={[600, 900, 1200]}
              aspectRatio="5:3"
              loading="eager"
              background="#f2f2f200"
              fit="cover"
              position="center"
              class="w-full"
            />
      </div>
    ))
  }
</div>
</main>

<script>
  // element argument can be a selector string
  //   for an individual element
  var flkty = new Flickity( '.ball-carousel', {
  cellAlign: 'center',
  contain: true,
  autoPlay: 2400,
  imagesLoaded: true,  
  adaptiveHeight: true,
  selectedAttraction: 0.01,
  freeScrollFriction: 0.15,
  prevNextButtons: false,
  pageDots: false
  // lower attraction and lower friction
  // slower transitions
  // easier to flick past cells
  });
</script>

