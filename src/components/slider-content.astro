<!-- Flickity Custom Styles -->
<style>

  .carousel-cell {
  min-width: 300px;
  width: 33vw;
  max-width: 550px;
  min-height: 220px;
  margin-right: 10px;
  margin-bottom: 45px;
  padding: 20px, 40px;
}
  .flickity-viewport { min-height: fit-content; }

</style>

