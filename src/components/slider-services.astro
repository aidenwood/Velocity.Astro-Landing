<!-- Flickity Custom Styles -->
<style>
  body { max-width: 100vw; }

  .carousel-cell {
    min-width: 300px;
    width: 33vw;
    max-width: 550px;
    min-height: 220px;
    margin-right: 20px;
    padding: 20px, 40px;
  }
  .flickity-viewport { min-height: fit-content; }
  .main-carousel, .flickity-viewport { max-width: 1536px !important; margin: 0 auto; }
