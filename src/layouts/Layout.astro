---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Detailedfooter from "@components/detailed-footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";
import '../styles/main.css';

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "Web Design & Marketing Automation"
  : "Aidxn Web Design & Ad Management - Reliable Marketing Management";
---

<style>
h1,h2,h3,h4 {font-family: "wotfard", sans-serif;}
</style>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- preload custom font -->
    <link
    rel="preload"
    href="/fonts/wotfard-semibold.woff2"
    as="font"
    type="font/woff2"
    crossorigin
    />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="Cutting Edge Web Design & Marketing Automation on the Gold Coast. Refresh your brand and get a faster, more competitive website for less with Velocity7, our in-house website framework."
      canonical={canonicalURL}
      twitter={{
        creator: "@aidenwood",
        site: "@aidxn.com",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Aidxn Code & Design - Build your Website with Velocity7`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Cutting Edge Web Design & Marketing Automation on the Gold Coast. Refresh your brand and get a faster, more competitive website for less with Velocity7, our in-house website framework.",
        },
      }}
    />
    
  <!-- aidxn.com property linked to search console for better SEO - Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-MN4T5PXYLD"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-MN4T5PXYLD');
    </script>
    
  </head>
  
  <body>
    <Navbar />
    <slot />
    <Detailedfooter />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
